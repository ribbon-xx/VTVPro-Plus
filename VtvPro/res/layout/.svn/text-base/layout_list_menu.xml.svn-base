<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/categories_title_divider"
            android:paddingBottom="@dimen/padding_5dp"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_5dp"
            android:text="@string/taikhoan"
            android:textColor="@color/text_menu"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:id="@+id/layMenuLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_menu_size"
                android:layout_height="@dimen/icon_menu_size"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icon_profile_menu" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/dangnhap"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="@dimen/icon_menu_size"
                android:layout_height="@dimen/icon_menu_size"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_menu" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layMenuProfile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imvProfile"
                android:layout_width="@dimen/icon_menu_size_large"
                android:layout_height="@dimen/icon_menu_size_large"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icon_profile_menu" />

            <TextView
                android:id="@+id/tvNameLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="@dimen/icon_menu_size"
                android:layout_height="@dimen/icon_menu_size"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_menu" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_listview" />

        <LinearLayout
            android:id="@+id/layMenuSetting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_menu_size"
                android:layout_height="@dimen/icon_menu_size"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icon_caidat_menu" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/caidat"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="@dimen/icon_menu_size"
                android:layout_height="@dimen/icon_menu_size"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_menu" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/categories_title_divider"
            android:paddingBottom="@dimen/padding_5dp"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_5dp"
            android:text="@string/danhmuc"
            android:textColor="@color/text_menu"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tvMuagoicuoc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:paddingLeft="@dimen/padding_10dp"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:text="@string/muagoicuoc"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_listview" />
        
        <TextView
            android:id="@+id/tvNapTien"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:paddingLeft="@dimen/padding_10dp"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:text="@string/naptiensmart"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_listview"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/tvChinhsach"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:paddingLeft="@dimen/padding_10dp"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:text="@string/chinhsachtt"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_listview" />
        
        <TextView
            android:id="@+id/tvHotro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:paddingLeft="@dimen/padding_10dp"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:text="@string/hotro"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_listview" />

    </LinearLayout>

</ScrollView>